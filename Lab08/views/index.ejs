<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CRUD de Usuarios</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />

    <script
      src="https://use.fontawesome.com/releases/v6.3.0/js/all.js"
      crossorigin="anonymous"
    ></script>

    <style>
      body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
      }

      .container {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        padding: 30px;
      }

      .table {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 5px;
      }

      .table .fa {
        font-size: 20px;
        margin-right: 10px;
      }
      form {
        background-color: #f8f9fa;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      }

      .form-label {
        font-size: 16px;
        font-weight: 600;
        color: #3bbcc3;
      }

      .form-control {
        font-size: 16px;
        height: 40px;
        border-radius: 5px;
        border: 1px solid #3bbcc3;
      }

      .btn-primary {
        background-color: #3bbcc3;
        border-color: #3bbcc3;
        color: #fff;
      }

      .btn-primary:hover {
        background-color: #3bbcc3;
        border-color: #3bbcc3;
      }
    </style>
  </head>
  <body>
    <div class="container mt-5">
      <h1 class="text-center mb-5">Usuarios</h1>
      <form action="/users" method="POST" class="mb-5">
        <div class="row">
          <div class="col-md-4 mb-3">
            <label for="name" class="form-label">
              <i class="fas fa-user"></i> Nombre
            </label>
            <input
              type="text"
              id="name"
              name="name"
              class="form-control"
              required
            />
          </div>
          <div class="col-md-4 mb-3">
            <label for="email" class="form-label">
              <i class="fas fa-envelope"></i> Email
            </label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              aria-describedby="emailHelp"
              required
            />
          </div>
          <div class="col-md-4 mb-3">
            <label for="password" class="form-label">
              <i class="fas fa-key"></i> Contraseña
            </label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              required
            />
            <span class="text-danger">
              <% errors.forEach(error => { %> <%= error.param === 'password' ?
              error.msg : 'La contraseña debe tener al menos 6 caracteres' %> <%
              }) %>
            </span>
          </div>

          <div class="col-md-4">
            <button type="submit" class="btn btn-primary btn-block">
              Crear Usuario
            </button>
          </div>
        </div>
      </form>

      <h3 class="mb-3">Lista de Usuarios</h3>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nombres</th>
            <th scope="col">Correo Electrónico</th>
            <th scope="col">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach((user, index) => { %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <a href="/users/edit/<%= user._id %>"
                ><i class="fas fa-pencil" style="color: #3bbcc3"></i
              ></a>
              <a href="/users/delete/<%= user._id %>"
                ><i class="fas fa-trash" style="color: #f9495b"></i
              ></a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
